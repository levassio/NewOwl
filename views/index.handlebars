<div class="text-center">
	<h1>Virtual Stand-up Meeting Notes</h1>

	<p class="lead">This is the last dozen of notes</p>
</div>

<div>

	<div class="container">
		<form action="/" method="post">
			<div class="row clearfix">
				<div class="col-md-4 column">
					<select name="memberName" id="memberName" class="form-control">
						<option value="">(Show All Members)</option>
						<option value="Divya">Divya</option>
						<option value="Robert">Robert</option>
						<option value="Merrick">Merrick</option>
						<option value="Ilya">Ilya</option>
					</select>
				</div>
				<div class="col-md-8 column">
					<button id="btnFilterNotes" name="btnFilterNotes" class="btn btn-primary">Filter</button>
				</div>
			</div>
		</form>
	</div>

	<div class="container">
		<div class="col-md-12 column list-group">
            {{#each notes}}
				<div class="list-group-item">
					<div>Note from <em><strong>{{memberName}}</strong></em> on: {{prettifyDate createdOn}}
						- for project <strong>{{project}}</strong></div>
					<div><strong>Work yesterday: </strong>{{workYesterday}}</div>
					<div><strong>Work today: </strong>{{workToday}}</div>
					<div><strong>Impediment: </strong>{{impediment}}</div>
				</div>
            {{/each}}
		</div>
	</div>
</div>